{
  "name": "storytel-player",
  "version": "1.0.2",
  "email": "andrea@debbaweb.it",
  "description": "Storytel Player - Storytel audiobook player for desktop",
  "main": "electron.js",
  "homepage": "./",
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm install && npm start",
    "client": "cd client && npm install && npm start",
    "build": "cd client && npm run build",
    "dev": "concurrently \"npm run server:dev\" \"npm run client\"",
    "server:dev": "cd server && npm install && npm run dev",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "test": "echo \"Error: no test specified\" && exit 1",
    "electron": "electron .",
    "electron:dev": "NODE_ENV=development electron .",
    "electron:pack": "electron-builder",
    "electron:dist": "npm run build && npm run server:build && electron-builder",
    "preelectron:pack": "npm run build && npm run server:build",
    "preelectron:dist": "npm run build && npm run server:build",
    "server:build": "cd server && npm run build",
    "clean": "rm -rf dist; rm -rf server/dist; rm -rf client/build"
  },
  "author": "debba <andrea@debbaweb.it>",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^7.6.0",
    "electron-store": "^10.1.0"
  },
  "keywords": [
    "storytel",
    "audiobook",
    "web",
    "react",
    "express"
  ],
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.28.4",
    "@babel/node": "^7.28.0",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.storytel.player",
    "productName": "Storytel Player",
    "directories": {
      "output": "dist"
    },
    "asarUnpack": [
      "server/**"
    ],
    "files": [
      "electron.js",
      "client/build/**/*",
      "server/dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.audio"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "category": "multimedia",
      "target": [
        "pacman"
      ],
      "icon": "client/public/assets/icon.png"
    }
  }
}
